{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["cypress", "node"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path mapping to allow imports from ui/src */
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["../src/*"],
      "@/*": ["../src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["cypress/**/*", "../src/**/*"],
  "exclude": [
    "node_modules",
    "cypress/downloads",
    "cypress/screenshots",
    "cypress/videos"
  ]
}
